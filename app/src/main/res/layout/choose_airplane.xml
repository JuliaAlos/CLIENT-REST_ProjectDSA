<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".ChooseAirplane">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="32dp"
        android:layout_height="43dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="chooseToMap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/back2_button"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/planeImageID"
        android:layout_width="299dp"
        android:layout_height="343dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="56dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <ImageView
        android:id="@+id/nextButtonID"
        android:layout_width="83dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:onClick="nextClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planeImageID"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/next"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/beforeButtonID"
        android:layout_width="83dp"
        android:layout_height="77dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="81dp"
        android:onClick="previousClick"
        android:rotationY="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextButtonID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planeImageID"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/next"
        app:tint="@color/white" />
    <ProgressBar
        android:id="@+id/circularProgressID"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/useAircraftButtonID"
        android:layout_width="212dp"
        android:layout_height="64dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="#B53E36"
        android:text="Use this aircraft"
        android:onClick="selectAircraftClick"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beforeButtonID"
        app:layout_constraintVertical_bias="0.355" />
</androidx.constraintlayout.widget.ConstraintLayout>