    <ImageView
        android:id="@+id/weight_button"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:onClick="upgradeWeight"
        android:rotationX="180"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/weight_progress"
        app:layout_constraintTop_toBottomOf="@+id/fuel_progress"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/upgrade" />

    <ImageView
        android:id="@+id/fuel_button"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:onClick="upgradeFuel"
        android:rotationX="180"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/fuel_progress"
        app:layout_constraintTop_toBottomOf="@+id/max_speed_progress"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/upgrade" />

    <ImageView
        android:id="@+id/speed_button"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:onClick="upgradeSpeed"
        android:rotationX="0"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/max_speed_progress"
        app:layout_constraintTop_toBottomOf="@+id/max_maneuverability_progress"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/upgrade" />

    <ProgressBar
        android:id="@+id/fuel_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="165dp"
        android:layout_height="62dp"
        android:layout_marginStart="119dp"
        android:layout_marginEnd="10dp"
        android:progress="60"
        android:progressBackgroundTint="@color/black"
        android:progressTint="#00FFE7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

    <ProgressBar
        android:id="@+id/min_fuel_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="165dp"
        android:layout_height="62dp"
        android:layout_marginStart="119dp"
        android:layout_marginEnd="10dp"
        android:progress="20"
        android:progressBackgroundTint="@color/black"
        android:progressTint="#FFFBE627"
