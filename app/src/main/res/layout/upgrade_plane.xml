    <ImageView
        android:id="@+id/maneuverability_button"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:onClick="upgradeManeuverability"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/max_maneuverability_progress"
        app:layout_constraintTop_toBottomOf="@+id/max_robustness_progress"
