<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storeButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddashboard"
    android:onClick="storeClick">

    <ImageView
        android:id="@+id/statsButton"
        android:layout_width="170sp"
        android:layout_height="150sp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="156dp"
        android:onClick="statsClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/stats" />

    <ImageView
        android:id="@+id/forumButton"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="16dp"
        android:onClick="forumClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forum" />

    <ImageView
        android:id="@+id/rankingButton"
        android:layout_width="170sp"
        android:layout_height="150sp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="156dp"
        android:onClick="rankingClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ranking" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="150sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/store" />

</androidx.constraintlayout.widget.ConstraintLayout>